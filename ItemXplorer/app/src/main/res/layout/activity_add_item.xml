<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/product"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddItemActivity">


    <EditText
        android:id="@+id/editTextText4"
        android:layout_width="203dp"
        android:layout_height="36dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="38dp"
        android:ems="10"
        android:hint="Enter Price"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/editTextText3" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="187dp"
        android:layout_height="41dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="30dp"
        android:hint="Item Details"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/productDetails"
        android:layout_width="84dp"
        android:layout_height="20dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="138dp"
        android:layout_marginEnd="43dp"
        android:hint="Item"
        app:layout_constraintEnd_toStartOf="@+id/editTextText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="97dp"
        android:layout_height="26dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="45dp"
        android:hint="Category"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productDetails" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="84dp"
        android:layout_height="23dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="45dp"
        android:hint="Location"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="58dp"
        android:layout_height="23dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="45dp"
        android:hint="Price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="124dp"
        android:layout_height="19dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="45dp"
        android:hint="Barcode Number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <EditText
        android:id="@+id/editTextText"
        android:layout_width="442dp"
        android:layout_height="38dp"
        android:layout_marginStart="43dp"
        android:layout_marginTop="47dp"
        android:ems="10"
        android:hint="Enter Item Name"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/productDetails"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="245dp"
        android:layout_height="40dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="35dp"
        android:ems="10"
        android:hint="Enter Category"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/editTextText" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="232dp"
        android:layout_height="40dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:hint="Enter Location"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/editTextText2" />

    <EditText
        android:id="@+id/editTextText5"
        android:layout_width="203dp"
        android:layout_height="42dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="25dp"
        android:ems="10"
        android:hint="Enter Barcode Number"
        android:inputType="text"
        app:layout_constraintStart_toEndOf="@+id/textView7"
        app:layout_constraintTop_toBottomOf="@+id/editTextText4" />

    <Button
        android:id="@+id/qrButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="70dp"
        android:hint="Scan QR Code"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <Button
        android:id="@+id/addItembutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="65dp"
        android:hint="Add Item "
        app:layout_constraintStart_toEndOf="@+id/qrButton"
        app:layout_constraintTop_toBottomOf="@+id/editTextText5" />
</androidx.constraintlayout.widget.ConstraintLayout>